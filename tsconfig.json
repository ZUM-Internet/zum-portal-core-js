{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./backend/",
        "baseUrl": "./",
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
      "./backend/**/*.ts",
      "./types/**/*.ts"
    ],
    "exclude": [
      "./**/*.d.ts"
    ]
}
