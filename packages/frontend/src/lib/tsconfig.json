{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "../../lib",
    "baseUrl": ".",
    "incremental": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
